<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardElevation="2dp"
    android:layout_marginBottom="4dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="8dp">

        <ImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/docImage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="12dp"/>

        <TextView
            android:id="@+id/docName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/docImage"
            android:layout_toLeftOf="@+id/onlieStatusBtn"
            android:layout_toRightOf="@+id/docImage"
            android:maxLines="1"
            android:text="April 12, 2013"
            android:textSize="16sp"
            android:paddingTop="10dp"/>

        <TextView
            android:id="@+id/docDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/docName"
            android:layout_below="@+id/docName"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@+id/onlieStatusBtn"
            android:ellipsize="end"
            android:paddingBottom="10dp"
            android:maxLines="2"
            android:text="This is a good Post, I hope it will have 2 lines. Please give me 2 lines"
            android:textIsSelectable="false"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/onlieStatusBtn"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:background="@android:color/holo_green_dark" />

    </RelativeLayout>

</android.support.v7.widget.CardView>

